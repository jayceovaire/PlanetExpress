generator client {
  provider        = "prisma-client-js"
  output          = "../generated/client"
  previewFeatures = ["deno"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Shipment {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @updatedAt
  updatedAt   DateTime @updatedAt
  planet      String
  hazardous   Boolean
  animal      Boolean
  fragile     Boolean
  oversize    Boolean
  description String
  cost        Int
}

model Log {
  id      Int       @id @default(autoincrement())
  level   Log_level
  message String
  meta    Json
}

enum Log_level {
  Info
  Warn
  Error
}
